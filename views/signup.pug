extends base

block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Create a new account
            form.form.form--signup
                .form__group
                    label.form__label(for='name-reg') Name
                    input#name-reg.form__input(type='text', placeholder='your name', required)
                .form__group
                    label.form__label(for='email-reg') Email address
                    input#email-reg.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password-reg') Password
                    input#password-reg.form__input(type='password', placeholder='••••••••', required, minlength='8')
                    form__group.ma-bt-md
                    label.form__label(for='password-confirm-reg') Confirm password
                    input#password-confirm-reg.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Signup